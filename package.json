    "AI",
    "Chatbot",
    "NestJS",
    "React",
    "Vite",
    "TypeScript",
    "PostgreSQL",
    "TypeORM",
    "WebSocket",
    "Socket.io",
    "OAuth2",
    "Passport",
    "Chakra UI",
    "Monorepo",
    "Fullstack",
    "LLM",
    "Gemini",
    "Hugging Face",
    "Pino",
    "Swagger",
    "Docker"
  ],
  "author": {
    "name": "Petar Zarkov",
    "email": "derpai.app@gmail.com"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": ">= 22.14.0",
    "pnpm": ">= 8.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petarzarkov/derp.ai.git"
  },
  "homepage": "https://github.com/petarzarkov/derp.ai",
  "scripts": {
    "prepare": "node -e \"process.env.CI || process.env.DOCKER || process.exit(1)\" || husky",
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "typecheck": "pnpm -r --parallel tsc --noEmit",
    "build": "pnpm -r --parallel --stream run build",
    "dev": "pnpm -r --parallel --stream run dev",
    "test": "pnpm -r --parallel --stream run test",
    "lint": "eslint --cache services/**",
    "pretty": "prettier --cache --ignore-unknown --write .",
    "version": "ts-node scripts/version.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "globby": "^14.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^ 8.31.0"
  },
