  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "@tensorflow/tfjs-node",
      "bcrypt",
      "core-js",
      "cpu-features",
      "electron",
      "electron-winstaller",
      "esbuild",
      "nestjs-pino",
      "protobufjs",
      "ssh2"
    ]
