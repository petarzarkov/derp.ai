{
  "name": "derp-ai-server",
  "appName": "DerpAI",
  "description": "Derp AI Server",
  "author": {
    "name": "Petar Zarkov",
    "email": "derpai.app@gmail.com"
  },
  "license": "MIT",
  "version": "0.0.3",
  "main": "./build/server/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/petarzarkov/derp.ai.git"
  },
  "homepage": "https://github.com/petarzarkov/derp.ai/tree/main/services/server",
  "scripts": {
    "clean": "rm -rf build",
    "start": "node build/main.js",
    "prebuild": "pnpm run clean",
    "build": "nest build",
    "dev": "nest start --watch",
    "mig:gen": "typeorm-ts-node-commonjs migration:generate -d app/db/typeorm.config.ts app/db/migrations/generated-migration",
    "mig:create": "typeorm-ts-node-commonjs migration:create app/db/migrations",
    "mig:run": "npx typeorm-ts-node-commonjs migration:run -d app/db/typeorm.config.ts",
    "mig:rev": "npx typeorm-ts-node-commonjs migration:revert -d app/db/typeorm.config.ts",
    "test:unit": "jest --selectProjects=unit",
    "test:integration": "jest --selectProjects=integration",
    "test": "jest --selectProjects=unit --selectProjects=integration --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.0.13",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.16",
    "@nestjs/platform-socket.io": "^11.0.13",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "^11.1.1",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.15",
    "@slack/bolt": "^4.2.1",
    "redis": "^4.7.0",
    "bcrypt": "^5.1.1",
    "helmet": "^8.1.0",
    "passport-github2": "^0.1.12",
    "passport-oauth2": "^1.8.0",
    "cache-manager": "^6.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express-session": "^1.18.1",
    "express-useragent": "^1.0.15",
    "nestjs-context-logger": "^1.6.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "7.5.7",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.22",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/testing": "^11.0.13",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.11",
    "@swc/jest": "^0.2.36",
    "@testcontainers/postgresql": "^10.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/express-useragent": "^1.0.5",
    "@types/jest": "^29.5.14",
